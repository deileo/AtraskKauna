<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />
    <title>{% block title %}Kas Vyksta Kaune{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap-theme.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bower/toastr/toastr.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/Page.css') }}">
    {% endblock %}
    <script src="{{ asset('bower/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('bower/toastr/toastr.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>

    <section id="wrapper">
        <div class="top">
            {% block navigation %}
                <nav class="navbar navbar-inverse navbar-static-top">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li class="active"><a href="{{ path('nfq_home_homepage') }}">Pradinis puslapis</a></li>
                            </ul>
                            <ul class="nav navbar-nav navbar-right">

                                {% if app.user %}
                                    <li style="color: white;">Hello {{ app.user.fullName }}! </li>
                                    <a style="color: white;" href="{{ path('logout') }}">Logout</a>
                                {% else %}
                                    <li style="color: white;">{% render(controller('HWIOAuthBundle:Connect:connect')) %}</li>
                                {% endif %}

                            </ul>
                        </div>
                    </div>
                </nav>
            {% endblock %}
        </div>

    <section class="main-col">
        {% block Jumbotron %}
        {% endblock %}
        {% block body %}
        {% endblock %}
    </section>

    <div id="footer">
        {% block footer %}
            <div class="navbar navbar-inverse navbar-static-bottom">
            <div class="container-fluid text-center">
                Kas Vyksta Kaune - Sukurta <a href="https://github.com/nfq-akademija-2015-ruduo/Kas_vyksta_Kaune">Nfq Akademija Komanda Nr. 2</a>
            </div>
        </div>
        {% endblock %}
    </div>
</section>

{% block javascripts %}
{% endblock %}
</body>
</html>